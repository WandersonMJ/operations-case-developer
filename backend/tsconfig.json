{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"],
      "models/*": ["models/*"],
      "controllers/*": ["controllers/*"],
      "repositories/*": ["repositories/*"],
      "services/*": ["services/*"],
      "routes/*": ["routes/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
